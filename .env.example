# =============================================================================
# Advanced RAG System Configuration
# Copy this file to .env and adjust values for your setup
# All values have sensible defaults - only override what you need
# =============================================================================

# LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Embedding Model Configuration
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
EMBEDDING_DEVICE=cpu
# For GPU acceleration, change to: cuda
# EMBEDDING_DEVICE=cuda
EMBEDDING_BATCH_SIZE=32

# Vector Store Configuration
VECTOR_DB_PATH=./data/vector_db
COLLECTION_NAME=documents

# Reranker Model
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Retrieval Settings
TOP_K_RETRIEVAL=40
# Number of documents to rerank (subset of TOP_K_RETRIEVAL)
TOP_K_RERANK=10

# Document Chunking
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Hybrid Search Weights (dense semantic + sparse keyword)
DENSE_WEIGHT=0.7
SPARSE_WEIGHT=0.3

# Generation Settings
TEMPERATURE=0.1
MAX_TOKENS=512

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/rag_system.log

# Cache Settings (optional)
ENABLE_CACHE=true
CACHE_TTL=3600

# Data Paths
DATA_RAW_PATH=./data/raw
DATA_PROCESSED_PATH=./data/processed
TEST_DATA_PATH=./data/test

# Evaluation Settings
EVAL_PRECISION_K=5
EVAL_RECALL_K=5
EVAL_ADAPTIVE=true
EVAL_SMALL_DATASET_THRESHOLD=50
EVAL_MEDIUM_DATASET_THRESHOLD=200

# Dataset Configuration (for example/demo purposes)
ARXIV_CATEGORIES=cs.AI,cs.CL,cs.LG
NUM_PAPERS=100
